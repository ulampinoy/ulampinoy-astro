---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";

const postsPerPage = 12;
const allPosts = await getCollection("blog", ({ data }) => data.draft !== true);
const totalPosts = allPosts.length;
const totalPages = Math.ceil(totalPosts / postsPerPage);

// Get the current page from the URL
const { page } = Astro.params;
const currentPage = page ? parseInt(page, 10) : 1;

// Calculate the start and end index for the current page
const startIndex = (currentPage - 1) * postsPerPage;
const endIndex = Math.min(startIndex + postsPerPage, totalPosts);

// Get the posts for the current page
const posts = allPosts
  .sort(
    (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
  )
  .slice(startIndex, endIndex);

function formatDate(dateStr: Date) {
  return new Date(dateStr).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}
---

<BaseLayout
  title="All Articles | UlamPinoy"
  description="Browse all UlamPinoy articles and recipes"
>
  <main class="pt-24 pb-12">
    <div class="container mx-auto max-w-6xl px-4">
      <h1 class="text-4xl md:text-5xl savate-bold mb-8">All Articles</h1>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-10">
        {
          posts.map((post) => (
            <a href={`/blog/${post.slug}`} class="group">
              <div class="aspect-[16/9] overflow-hidden rounded-lg">
                <img
                  src={post.data.image}
                  alt={post.data.title}
                  class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
                />
              </div>
              <div class="mt-4">
                <p class="text-sm text-amber-500 mb-1">{post.data.whetter}</p>
                <h2 class="text-2xl md:text-3xl savate-bold group-hover:text-amber-500 transition-colors">
                  {post.data.title}
                </h2>
                <p class="text-gray-700 mt-2 line-clamp-2">
                  {post.data.description}
                </p>
              </div>
            </a>
          ))
        }
      </div>

      {/* Pagination */}
      <div class="flex justify-center mt-8">
        {
          currentPage > 1 && (
            <a
              href={`/articles/${currentPage - 1}`}
              class="px-4 py-2 mx-1 bg-gray-100 rounded-md hover:bg-gray-200"
            >
              Previous
            </a>
          )
        }

        {
          Array.from({ length: totalPages }, (_, i) => i + 1).map(
            (pageNumber) => (
              <a
                href={`/articles/${pageNumber}`}
                class={`px-4 py-2 mx-1 rounded-md ${
                  currentPage === pageNumber
                    ? "bg-yellow-500 text-white"
                    : "bg-gray-100 hover:bg-gray-200"
                }`}
              >
                {pageNumber}
              </a>
            )
          )
        }

        {
          currentPage < totalPages && (
            <a
              href={`/articles/${currentPage + 1}`}
              class="px-4 py-2 mx-1 bg-gray-100 rounded-md hover:bg-gray-200"
            >
              Next
            </a>
          )
        }
      </div>
    </div>
  </main>
</BaseLayout>
