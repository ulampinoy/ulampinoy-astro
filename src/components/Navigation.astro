---
const { currentPath } = Astro.props;
---

<nav
  class="fixed top-0 left-0 right-0 z-50 bg-white/90 backdrop-blur-sm border-b noto-sans"
>
  <div class="container mx-auto max-w-6xl px-4">
    <div class="flex items-center justify-between h-16">
      {/* Logo */}
      <a
        href="/"
        class="savate-heavy text-2xl tracking-wider hover:text-black text-amber-500 transition-colors"
      >
        ULAMPINOY
      </a>

      {/* Mobile menu button */}
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-md hover:bg-gray-100 focus:outline-none"
        aria-label="Toggle menu"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>

      {/* Navigation links */}
      <div id="nav-links" class="hidden md:flex md:items-center md:space-x-8">
        <a
          href="/articles"
          class={`text-sm font-medium ${
            currentPath === "/articles"
              ? "text-amber-500"
              : "text-gray-700 hover:text-amber-500"
          }`}
        >
          Articles
        </a>

        <a
          href="/videos"
          class={`text-sm font-medium ${
            currentPath === "/videos"
              ? "text-amber-500"
              : "text-gray-700 hover:text-amber-500"
          }`}
        >
          Videos
        </a>
        <a
          href="/glossary"
          class={`text-sm font-medium ${
            currentPath === "/glossary"
              ? "text-amber-500"
              : "text-gray-700 hover:text-amber-500"
          }`}
        >
          Glossary
        </a>
        <a
          href="/tags"
          class={`text-sm font-medium ${
            currentPath === "/tags"
              ? "text-amber-500"
              : "text-gray-700 hover:text-amber-500"
          }`}
        >
          Tags
        </a>
      </div>
    </div>

    {/* Mobile menu */}
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <a
        href="/articles"
        class={`block px-4 py-2 text-sm font-medium ${
          currentPath === "/articles"
            ? "text-amber-500"
            : "text-gray-700 hover:text-amber-500"
        }`}
      >
        Articles
      </a>
      <a
        href="/glossary"
        class={`block px-4 py-2 text-sm font-medium ${
          currentPath === "/glossary"
            ? "text-amber-500"
            : "text-gray-700 hover:text-amber-500"
        }`}
      >
        Videos
      </a>
      <a
        href="/videos"
        class={`block px-4 py-2 text-sm font-medium ${
          currentPath === "/videos"
            ? "text-amber-500"
            : "text-gray-700 hover:text-amber-500"
        }`}
      >
        Videos
      </a>
      <a
        href="/tags"
        class={`block px-4 py-2 text-sm font-medium ${
          currentPath === "/tags"
            ? "text-amber-500"
            : "text-gray-700 hover:text-amber-500"
        }`}
      >
        Tags
      </a>
    </div>
  </div>
</nav>

<script>
  // Toggle mobile menu
  const mobileMenuButton = document.getElementById("mobile-menu-button");
  const mobileMenu = document.getElementById("mobile-menu");

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  }
</script>
